.photo
    height: 150px
    width: 150px
    position: relative
    margin-bottom: 10px
    overflow: hidden

    &__preview
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        cursor: pointer

        &:before,
        &:after
            position: absolute
            left: 0
            width: 100%

        &:before
            top: 0
            height: 100%
            background: rgba(0, 0, 0, .5)

        &:after,
        &__upload:after
            color: #fff
            top: 50%
            text-align: center
            margin-top: -7px

        &:hover
            &:before
                content: ''
                z-index: 2

            &:after
                content: 'delete'
                z-index: 3
                

    &__src
        max-height: 150%
        min-width: 100%
        min-height: 100%
        position: absolute
        top: 0
        left: 0

    &__upload
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(0, 0, 0, .5)

        &-txt
            position: absolute
            top: 50%
            margin-top: -7px
            color: #fff
            text-align: center
            width: 100%

        &-input
            opacity: 0
            width: 100%
            cursor: pointer
            z-index: 2
            height: 100%
            position: absolute
            top: 0
            left: 0


